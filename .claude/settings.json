{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun x gh-setup-hooks",
            "timeout": 120
          },
          {
            "type": "command",
            "command": "command -v deno || curl -fsSL https://deno.land/install.sh | sh",
            "timeout": 120
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "claude-code-setup@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true
  },
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(./build.sh:*)",
      "Bash(unzip:*)",
      "Bash(npm run type-check:*)",
      "Bash(ln:*)",
      "Bash(npm run build:*)",
      "Bash(npm install:*)",
      "Bash(npm run test:*)",
      "Bash(npm test)",
      "Bash(python3:*)",
      "Bash(git rev-parse:*)",
      "Bash(gh pr:*)",
      "Bash(deno:*)"
    ]
  }
}
